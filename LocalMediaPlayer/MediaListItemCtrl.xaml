<UserControl x:Class="LocalMediaPlayer.MediaListItemCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LocalMediaPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" x:Name="VideoImage"/>
        <Label Grid.Row="1" Grid.Column="1" x:Name="FileNameLabel"/>
        <Label Grid.Row="2" Grid.Column="1" x:Name="VideoDateTimeLabel"/>
        <CheckBox Grid.Row="2" Grid.Column="3" Margin="0,0,5,0" x:Name="ChooseCheckBox"/>
    </Grid>
</UserControl>
